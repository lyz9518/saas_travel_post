<h2>Details about <em><%= @post.title %></em></h2>

<ul id="details">
  <li>
    Created on:
    <%= @post.date %>
  </li>
  <li>
    By:
    <%= @post.creator_id %>
  </li>
</ul>

<h3>Description:</h3>
<p id="description">
  <%= @post.description %>
</p>

<div class="row">
  <%= link_to 'Edit', edit_post_path(@post), class: 'btn btn-primary col-2' %>
  <%= link_to 'Delete', post_path(@post), 'data-method': 'delete', 'data-confirm': 'Are you sure?', class: 'btn btn-danger col-2' %>
  <%= link_to 'Back', posts_path, class: 'btn btn-primary col-2' %>
</div>
